@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background-color: #2c3e50;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            background-color: #ecf0f1;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 380px;
            text-align: center;
            position: relative;
        }

            .login-container img {
                width: 150px;
                height: 150px;
                border-radius: 50%;
                margin-bottom: 20px;
            }

            .login-container h2 {
                margin-bottom: 30px;
                font-size: 26px;
                color: #34495e;
                font-weight: 700;
                letter-spacing: 1px;
            }

            .login-container input[type="email"],
            .login-container input[type="password"] {
                width: 100%;
                padding: 15px;
                margin-bottom: 20px;
                border: none;
                border-radius: 30px;
                font-size: 14px;
                background-color: #bdc3c7;
                color: #2c3e50;
                box-shadow: inset 0 4px 6px rgba(0, 0, 0, 0.1);
                transition: all 0.3s ease;
            }

                .login-container input[type="email"]:focus,
                .login-container input[type="password"]:focus {
                    background-color: #ecf0f1;
                    box-shadow: 0 0 8px rgba(41, 128, 185, 0.8);
                }

            .login-container label {
                display: block;
                text-align: left;
                margin-bottom: 5px;
                color: #34495e;
                font-size: 14px;
            }

            .login-container button {
                width: 100%;
                padding: 15px;
                background-color: #2980b9;
                color: white;
                border: none;
                border-radius: 30px;
                font-size: 16px;
                font-weight: 600;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .login-container button:hover {
                    background-color: #3498db;
                }

            .login-container p {
                margin-top: 20px;
                color: #7f8c8d;
                font-size: 14px;
            }

                .login-container p a {
                    color: #2980b9;
                    text-decoration: none;
                    font-weight: 600;
                }

                    .login-container p a:hover {
                        text-decoration: underline;
                    }

        /* Agregar un degradado suave al fondo */
        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, #2980b9 0%, #2c3e50 100%);
            z-index: -1;
        }
    </style>
</head>
<body>

    <div class="login-container">
        <img src="~/img/tt.png" alt="Login">
        <h2>Iniciar sesión</h2>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group mb-3">
                <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.Password" class="form-label">Contraseña</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Contraseña" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3 text-start">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    Recordar mis datos
                </label>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Acceder</button>
            </div>
            <div>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crear una cuenta nueva</a>
                </p>
            </div>
        </form>
    </div>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
