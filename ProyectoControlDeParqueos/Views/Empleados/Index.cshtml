@model IEnumerable<ProyectoControlDePermisos.Models.Empleados>

@{
    ViewData["Title"] = "Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #eef2f3;
        font-family: 'Arial', sans-serif;
        color: #333;
    }

    h1 {
        text-align: center;
        color: #2c3e50;
        margin: 40px 0;
        font-size: 2.5em;
        font-weight: 600;
        text-transform: uppercase;
    }

    .container {
        max-width: 900px;
        margin: auto;
        padding: 20px;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(41, 128, 185, 0.5);
    }

    .btn-create {
        display: inline-block;
        background-color: #2980b9;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 30px;
        cursor: pointer;
        font-size: 16px;
        text-decoration: none;
        margin-bottom: 20px;
        transition: background-color 0.3s ease, transform 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

        .btn-create:hover {
            background-color: #1a639b;
            transform: translateY(-2px);
        }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        font-size: 16px;
    }

    th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #dfe6e9;
    }

    th {
        background-color: #f7f9fa;
        color: #34495e;
        font-weight: bold;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    tr:hover {
        background-color: rgba(41, 128, 185, 0.1);
    }

    .action-links {
        display: flex;
        gap: 10px;
    }

        .action-links a {
            color: #2980b9;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease, transform 0.3s ease;
        }

            .action-links a:hover {
                color: #1a639b;
                transform: scale(1.1);
            }
</style>

<div>
    <h1>Lista de Empleados</h1>

    <p>
        <a class="btn-create" asp-action="Create">➕ Crear Nuevo Empleado</a>
    </p>

    <table>
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.NombreCompleto)</th>
                <th>@Html.DisplayNameFor(model => model.Cargo)</th>
                <th>@Html.DisplayNameFor(model => model.FechaContratacion)</th>
                <th>@Html.DisplayNameFor(model => model.Correo)</th>
                <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                <th>@Html.DisplayNameFor(model => model.DPI)</th>
                <th>@Html.DisplayNameFor(model => model.EstadoActivo)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NombreCompleto)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cargo)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaContratacion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                    <td>@Html.DisplayFor(modelItem => item.DPI)</td>
                    <td>@Html.DisplayFor(modelItem => item.EstadoActivo)</td>
                    <td class="action-links">
                        <a asp-action="Edit" asp-route-id="@item.IdEmpleado">✏️ Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdEmpleado">🔍 Detalles</a>
                        @* <a asp-action="Delete" asp-route-id="@item.IdEmpleado">🗑️ Eliminar</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
